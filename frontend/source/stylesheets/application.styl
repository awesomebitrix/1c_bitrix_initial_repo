easing = cubic-bezier(0.86, 0, 0.07, 1)

*
  &
  &::before
  &::after
    box-sizing border-box

html
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering geometricprecision

body
  font-family 'Muller', sans-serif
  background #f5f5f5
  min-width 1370px

input
  font inherit
  outline none
  padding 0
  margin 0
  width 100%

h2
  font-size 40px
  font-weight 900

a
  transition .25s ease

svg
  fill currentColor

  a > &
    vertical-align middle

img
  vertical-align top

.project-info
  margin-top 45px
  text-align center

  &__more
    margin-top 30px

.project-features
  border-top 1px solid rgba(#fff ,.1)
  margin-top 90px
  padding-top 50px


.project-features-block
  text-align center

  &__icon
    font-size 50px
    opacity .4

  &__name
    font-size 20px
    line-height 1.5
    margin 15px 0

  &__text
    line-height 1.5

.pane
  position relative
  background #fff
  border-radius .25rem
  overflow hidden
  margin 2.5rem auto
  width 77.5rem

  &_wide
    width auto
    margin-left 30px
    margin-right 30px


  &_hero
    color #fff
    margin-top 0
    padding-top 1.875rem
    padding-bottom 3.75rem
    background-size cover
    background-repeat no-repeat
    background-position 50% 50%
    background-attachment fixed
    text-align center

    &::before
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background rgba(#09324b, .6)

  &__meta
    color #95928c
    font-size 20px
    line-height 1.5
    margin-top 10px

  &__bottom
    padding 15px 0
    justify-content center
    text-align center
    border-top 1px solid #e7e7e7
    margin 40px -50px 0
    font-size 20px
    line-height 1.5

    &_lightgray
      background #fbfafa

  &__name
    font-size 40px
    font-weight 900

  &__top
    padding 40px 0 0

    &_decorated
      margin 0 -50px 0
      padding-left 50px
      padding-right 50px
      padding-bottom 30px
      border-bottom 1px solid #f5f3f2

  &__content
    position relative
    padding-top 1.875rem
    z-index 9

    &_wide
      padding-top 0
      margin-bottom -40px
      margin-left -50px
      margin-right -50px

  &__badge
    white-space nowrap
    font-size 14px
    line-height 1.5
    margin-left 20px
    display inline-block
    position relative
    top -7px
    border-radius 4px
    padding 0 8px
    color #fff
    background #bf0000

  &_theme_special
    background-image url('../images/a001.png')
    background-repeat no-repeat
    background-size 1240px 390px

.pane-links
  margin-left 1.875rem

  &__item
    font-size .875rem
    line-height 1.5

    &::before
      content '•'
      margin 0 .75rem
      font-size 1.5ex
      color #1454e5

    &:first-child::before
      display none


.faqs-instance
  font-size 20px
  line-height 1.5
  margin-bottom 20px




.post
  position relative

  &__image
    > img
      width 100%

  &__content
    position relative

  &__name
    font-size 32px
    line-height 1.375
    margin .375rem 0

  &__meta
    color #95928c
    font-size .875rem
    line-height 1.5

  &__text
    font-size 20px
    line-height 1.5
    margin-top .375rem

  &__toolbar
    font-size 12px
    line-height 1.5

  &_s_m
    padding-right 1.875rem

  &_s_m &__image
    height 12.5rem
    margin-bottom 1rem

  &_s_m &__toolbar
    margin-top 1.25rem


  &_s_s
    margin-bottom 30px

  &_s_s &__content
    margin-left 215px
    height 150px

  &_s_s &__image
    float left
    width 195px
    height 150px

  &_s_s &__toolbar
    position absolute
    left 0
    bottom 0
    width 100%


.news-block
  &__meta
    color #95928c
    font-size 14px
    line-height 1.5

  &__text
    margin 4px 0
    line-height 1.5

.sponsors
  &__section
    margin 30px -20px
    padding 0 20px
    border-top 1px solid #e7e7e7

    &:first-child
      margin-top 0
      border-top none

  &__name
    margin 30px 0
    font-size 20px
    line-height 1.5

.sponsors-block
  margin 0 0 30px
  text-align center

  &__image
    position relative
    margin 0 0 15px

    > img
      position absolute
      top 50%
      left 50%
      transform translate3d(-50%, -50%, 0)

  &_s_s
    font-size 14px

  &_s_s &__image
    height 140px

  &_s_m &__image
    height 180px
    border 1px solid #f5f3f2

.project-news-instance
  &__meta
    color #95928c
    font-size 14px
    line-height 1.5

  &__text
    margin 2px 0
    line-height 1.5

.page-header
  position relative
  height 5.625rem
  font-size 14px
  padding 20px 30px
  align-items baseline

  &__menu
    margin-right 1.875rem

  &__lang
    margin-right 1rem

  &__logo
    position absolute
    top 50%
    left 50%
    font-size 52px
    transform translate3d(-50%, -50%, 0)

.page-header__location
  margin-right 4px

  &::after
    content '→'
    font-family Arial
    margin 0 4px


.page-header-note
  &__badge
    font-size 12px
    font-weight 700
    color #fff
    background #000
    border-radius 50%
    display inline-block
    width 18px
    height 18px
    line-height 20px
    text-align center
    background #bf0000

.page-header-user
  &__image
    width 24px
    height 24px
    margin-right 8px
    display inline-block
    vertical-align middle

    > img
      width 100%

.page-footer
  cursor default

  &__copyright
    font-size 20px
    line-height 1.5
    margin-bottom 16px

  &__section
    margin 64px 0 32px

.page-footer-developer
  font-size 12px
  text-transform uppercase
  letter-spacing 0.15em

  &__meta
    color #95928c

  &:hover
    color #1454e5

.page-footer-group
  line-height 35px
  transition .25s ease
  margin-left -15px
  margin-right -15px
  padding-left 15px
  padding-right 15px

  &__caption
    color #95928c

  &__link
    display block

    &:hover
      color #1454e5

  &_inactive
    opacity .25


.social
  &__button
    display block
    border-radius 4px
    color #fff
    text-align center

    &.icon_vk
      background #45668e
    &.icon_facebook
      background #3b5998
    &.icon_twitter
      background #55acee
    &.icon_google
      background #dd4b39
    &.icon_instagram
      background #6d3f09
    &.icon_youtube
    &.icon_youtube_2
      background #e52d27

  &_s_l &__button
    width 3.75rem
    height 3.75rem
    line-height 3.75rem

    &.icon_facebook
    &.icon_instagram
    &.icon_youtube_2
      font-size 1.875rem

    &.icon_twitter
      font-size 1.375rem

    &.icon_vk
    &.icon_youtube
      font-size 1.5rem

    &.icon_youtube
      text-indent .25rem

  &_s_s
    margin-right -15px

  &_s_s &__button
    width 1.875rem
    height 1.875rem
    font-size 16px
    line-height 1.875rem
    margin-right .9375rem

    &.icon_twitter
      font-size 14px

  &_sepia &__button
    background #95928c

.button
  position relative
  z-index 1
  display inline-block
  vertical-align top
  white-space nowrap
  user-select none

  &_d3
    padding 0 1.875rem
    height 50px
    line-height 50px
    color #bf0000
    font-size 14px
    font-weight 500
    border-radius 25px

    &::before
      content ''
      position absolute
      top 0
      border-radius 25px
      z-index -1
      left 0
      width 100%
      height 100%
      border 2px solid #e5aaa9
      transition .25s ease


    &:hover
      color #fff
      background #bf0000

      &::before
        opacity 0

    &:active
      background #e5aaa9
      &::before
        opacity 1

  &_d3 &__text
    vertical-align -1px

  &_d_2
    background #bf0000
    border-radius 30px
    padding 0 30px
    height 60px
    line-height 60px
    transition box-shadow .25s ease

  &_d_2:hover
    color #bf0000
    background #fff
    box-shadow 0px 20px 20px 0px rgba(20, 18, 18, 0.2), 0px 10px 15px 0px rgba(20, 18, 18, 0.1)

  &_d_2:active
    box-shadow 0px 10px 15px 0px rgba(20, 18, 18, 0.1), 0px 4px 8px 0px rgba(20, 18, 18, 0.15)


  &_d_2 &__text
    font-weight 700
    font-size 20px
    vertical-align -2px

  &_d_1
    height 50px
    line-height 50px
    padding 0 20px
    position relative
    overflow hidden

    &::before
      transition background, box-shadow .25s ease
      content ''
      z-index -1
      position absolute
      top 0
      left 0
      border-radius 25px
      border 2px solid #b1afae
      width 100%
      height 100%

  &_d_1.button_hovered::before
  &_d_1:hover::before
    border none
    background rgb(231, 231, 231)
    box-shadow inset 0px 4px 8px 0px rgba(0, 0, 0, 0.08)

  &_d_1:active::before
    box-shadow inset 0px 4px 10px 0px rgba(0, 0, 0, 0.2)


  &__icon
    margin-right 4px


.location
  &__tabs
  &__current
    font-size 20px
    line-height 1.5

  &__tabs
    margin-bottom 40px

  &__cities
    margin-top 12px

  &__city
    display block
    padding 4px 0
    line-height 1.5

    &:hover
      color #1454e5



.search
  position relative
  margin 50px -45px 30px
  padding 0 45px

  &__control
    border none
    background none
    font-size 40px
    font-weight 100

  &::after
    content ''
    background #e7e7e7
    height 1px
    display block
    margin 21px -45px 0


.search-results
  position absolute
  top 100%
  left 0
  width 100%
  z-index 9
  max-height 305px
  overflow-y scroll

.search-results-block
  display block
  position relative
  background #f8f7f6
  font-size 1.25rem
  line-height 30px
  padding .9375rem 2.8125rem
  border-bottom 1px solid #eeeeee

  &__meta
    color #95928c
    font-weight 300
    font-size 16px
    margin-left 4px

  &_current
    cursor default
    color #13b34f
    background #e7f7ed

    &::after
      content '\e921'
      font-family 'icomoon' !important
      position absolute
      right 2.8125rem

  &_current &__meta
    color #13b34f

.search-actions
  position absolute
  top 0
  right 45px
  height 40px
  background #fff
  padding 4px 0

  &__icon
    color #95928c
    font-size 32px

    &:hover
      color #000

.window
  position relative
  border-radius 10px
  background #fff
  padding 60px 45px

  &__topbar
    position relative
    height 80px

  &__menu-button
    margin-left -30px
    margin-top 15px
    font-size 14px
    .icon
      margin-left 1px
      margin-right 6px

  &__logo
    @extend .page-header__logo

  &__close
    position absolute
    top .625rem
    right .625rem
    font-size 2rem
    transition .25s cubic-bezier(0.175, 0.885, 0.32, 1.275)
    transform rotate(0)

    &:hover
      transform rotate(90deg)



  &__container
    // min-width 1280px
    margin 0 auto

  &_decorated
    padding-top 0
    background-image url('../images/a002.png')
    background-repeat repeat-x
    background-size 1370px 195px
    background-position 50% 0


.faqs
  margin 0 0 -8px

  &__item
    margin 0 0 8px
    line-height 2rem


.pane-t
  width 100%
  border-collapse collapse

  &__r:first-child &__c
    border-top none

  &__r:hover &__c
    background #f8f7f6

  &__c
    border-top 1px solid #f5f3f2
    padding 1.875rem 0
    padding-left 30px
    padding-right 30px

    &_ab
      vertical-align baseline

    &_at
      vertical-align top

    &:first-child
      padding-left 50px

    &:last-child
      padding-right 50px
      width 1%
      text-align center
      white-space nowrap


.tags
  margin-top 8px
  margin-left -4px
  margin-right -4px

  &__item
    margin-right 4px
    margin-left 4px

.tags-block
  &__button
    display inline-block
    color #1454e5
    border 1px solid #e7e7e7
    border-radius 4px
    font-size .875rem
    line-height 1.875rem
    padding 0 .5rem


.lecturer-block
  &__content
    padding-left 55px

  &__image
    float left
    width 45px
    height 45px
    margin-right 10px

    > img
      width 100%

  &__label
    font-size 12px
    margin 0 0 4px
    letter-spacing .15em
    color #95928c
    line-height 1.5
    font-weight 300
    text-transform uppercase


.tabs-block
  position relative
  display block
  color #1454e5
  cursor pointer
  overflow hidden
  transition color .25s ease

  &::after
    content ''
    position absolute
    bottom 4px
    left 0
    width 100%
    border-bottom 1px solid
    transition transform .25s ease
    transform translate3d(0,0,0)

  &_active
    color inherit
    cursor default

    &::after
      transform translate3d(-110%, 0, 0)
