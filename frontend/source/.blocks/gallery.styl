.gallery-block
  &__media
    display block
    position relative
    height 180px
    margin 0 0 1.25rem 0

    > img
      width 100%

    &_type_stream
      &::before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background #000
        opacity .4
